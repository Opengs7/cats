        <dependency>
            <groupId>com.comcast.cats</groupId>
            <artifactId>video-recorder-common</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jboss.as</groupId>
            <artifactId>jboss-as-ejb-client-bom</artifactId>
