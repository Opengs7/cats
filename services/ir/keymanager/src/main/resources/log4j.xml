<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Basic Console Appender -->
	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %x - %m\n" />
		</layout>
	</appender>
	<appender name="ROLLING" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="keymanager-rolling.log" />
		<param name="MaxFileSize" value="2MB" />
		<param name="MaxBackupIndex" value="14" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p [%c] %m%n" />
		</layout>
	</appender>

	<appender name="SYSLOG" class="org.apache.log4j.net.SyslogAppender">
		<param name="Facility" value="LOCAL1" />
		<param name="SyslogHost" value="localhost:10514" />
		<!-- Let's log all ERROR messages from cats to our syslog server. -->
		<param name="Threshold" value="ERROR" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{MMM dd HH:mm:ss} KEYMGRSERVICE: %-5p %m%n" />
		</layout>
	</appender>

	<logger name="com.comcast.cats" additivity="false">
		<level value="WARN" />
		<appender-ref ref="ROLLING" />
		<appender-ref ref="SYSLOG" />
	</logger>

	<root>
		<level value="WARN" />
		<appender-ref ref="ROLLING" />
		<appender-ref ref="SYSLOG" />
	</root>

</log4j:configuration>
