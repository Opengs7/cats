<!-- JBoss specific distribution configuration -->
<assembly>
	<id>${artifact.version}</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>*:ear:*</include>
				<include>*:zip:*</include>
				<include>mysql:mysql-connector-java:jar:*</include>
			</includes>
			<excludes>
			</excludes>
		</dependencySet>
		<dependencySet>
			<unpack>false</unpack>
			<outputFileNameMapping>${artifact.artifactId}-${artifact.classifier}.${artifact.extension}</outputFileNameMapping>
			<includes>
			    <!-- groupId:artifactId:extension:classifier:version-->
				<include>com.comcast.cats.prod:prod-cats-stability:jar:test-jar:*</include>
			</includes>
			<excludes>
			</excludes>
		</dependencySet>
		<dependencySet>
			<unpack>false</unpack>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>*:war:*</include>
			</includes>
			<excludes>
			</excludes>
		</dependencySet>
	</dependencySets>
	
	<fileSets>
		<fileSet>
			<directory>src/main</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>docs</directory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>bin</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}</directory>
			<includes>
				<include>*.txt</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
